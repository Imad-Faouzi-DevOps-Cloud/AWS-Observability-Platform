{
  "index_patterns": ["observability-logs*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "properties": {
      "timestamp": { "type": "date" },
      "level": { "type": "keyword" },
      "message": { "type": "text" },
      "log_group": { "type": "keyword" },
      "log_stream": { "type": "keyword" },
      "source": { "type": "keyword" },
      "aws_region": { "type": "keyword" }
    }
  }
}
